<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="120.0" prefWidth="390.0" style="-fx-background-color: white; -fx-background-radius: 7px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.projectmanagement.controller.RequestFriendItem">
   <children>
      <Label fx:id="notification" layoutX="72.0" layoutY="12.0" prefHeight="50.0" prefWidth="285.0" style="-fx-alignment: TOP_LEFT;" text="Nguyen Trieu has sent you a friend request" wrapText="true">
         <font>
            <Font name="Arial" size="16.0" />
         </font>
      </Label>
      <HBox layoutX="72.0" layoutY="76.0" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="delete" mnemonicParsing="false" prefHeight="30.0" prefWidth="95.0" styleClass="button_cancel" stylesheets="@../css/InterfaceClient.css" text="Delete">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Button>
            <Button fx:id="accept" mnemonicParsing="false" onAction="#accept" prefHeight="30.0" prefWidth="95.0" styleClass="button_save" stylesheets="@../css/InterfaceClient.css" text="Accept">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Rectangle fx:id="avata" arcHeight="15.0" arcWidth="15.0" fill="LIGHTGRAY" height="46.0" layoutX="14.0" layoutY="14.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="46.0" />
   </children>
</AnchorPane>
